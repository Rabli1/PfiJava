<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez votre classe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Grille des classes -->
    <GridLayout
        android:id="@+id/classGrid"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <!-- Classe 1: Archer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/archerImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/archer_neutre" />

            <Button
                android:id="@+id/archerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archer" />
        </LinearLayout>

        <!-- Classe 2: Mage -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mageImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/mage_neutre" />

            <Button
                android:id="@+id/mageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mage" />
        </LinearLayout>

        <!-- Classe 3: Guerrier -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/warriorImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/guerrier_neutre" />

            <Button
                android:id="@+id/warriorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guerrier" />
        </LinearLayout>

        <!-- Classe 4: Voleur -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thiefImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/voleur_neutre" />

            <Button
                android:id="@+id/thiefButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voleur" />
        </LinearLayout>
    </GridLayout>

    <!-- Bouton Commencer -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commencer"
        android:layout_marginTop="20dp" />

</LinearLayout>
